<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NODE.JS PRACTICE</title>
  <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>

<body>
  <div class="container p-2 mx-auto sm:p-4 dark:text-gray-800">
    <!-- Page Title -->
    <h2 class="mb-4 text-2xl font-bold leading-tight text-center uppercase">
      List of courses
    </h2>

    <!-- Form -->
    <div class="bg-white border border-4 rounded-lg shadow relative m-10">
      <div class="p-6 space-y-4">
        <!-- Form Create -->
        <form action="/" method="POST" enctype="multipart/form-data" id="create-course">
          <div class="grid grid-cols-12 gap-6">
            <div class="col-span-12 sm:col-span-4">
              <label for="id" class="text-sm font-medium text-gray-900 block mb-2">
                Course ID
              </label>
              <input type="text" name="id" id="id"
                class="shadow-sm bg-gray-50 id text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 border border-gray-300"
                required>
            </div>
            <div class="col-span-12 sm:col-span-4">
              <label for="name" class="text-sm font-medium text-gray-900 block mb-2">
                Course Name
              </label>
              <input type="text" name="name" id="name"
                class="shadow-sm bg-gray-50 id text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 border border-gray-300"
                required>
            </div>
            <div class="col-span-12 sm:col-span-4">
              <label for="course_type" class="text-sm font-medium text-gray-900 block mb-2">
                Course Type
              </label>
              <select id="course_type" name="course_type"
                class="shadow-sm bg-gray-50 id text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 border border-gray-300"
                required>
                <option value="Cơ sở">Cơ sở</option>
                <option value="Cơ sở ngành">Cơ sở ngành</option>
                <option value="Chuyên ngành">Chuyên ngành</option>
              </select>
            </div>
          </div>
          <div class="grid grid-cols-12 gap-6 mt-4">
            <div class="col-span-12 sm:col-span-6">
              <label for="semester" class="text-sm font-medium text-gray-900 block mb-2">
                Semester
              </label>
              <select id="semester" name="semester"
                class="shadow-sm bg-gray-50 id text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 border border-gray-300"
                required>
                <option value="">Choose a semester</option>
                <option value="HK1/2020-2021">HK1/2020-2021</option>
                <option value="HK2/2021-2022">HK2/2021-2022</option>
                <option value="HK1/2022-2023">HK1/2022-2023</option>
                <option value="HK2/2023-2024">HK2/2023-2024</option>
              </select>
            </div>
            <div class="col-span-12 sm:col-span-6">
              <label for="department" class="text-sm font-medium text-gray-900 block mb-2">
                Department
              </label>
              <input type="text" name="department" id="department"
                class="shadow-sm bg-gray-50 id text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 border border-gray-300"
                required>
            </div>
          </div>
          <div class="text-center mt-6">
            <button
              class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit">
              Submit
            </button>
          </div>
        </form>

        <!-- Form Delete -->
        <form action="/delete" method="POST" enctype="multipart/form-data" id="delete-course">
          <div class="grid grid-cols-12 gap-6">
            <div class="col-span-12 sm:col-span-6">
              <label for="delete_id" class="text-sm font-medium text-gray-900 block mb-2">
                Course ID
              </label>
              <input type="text" name="id" id="delete_id"
                class="shadow-sm bg-gray-50 text-gray-900 sm:text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full p-2.5 border border-gray-300"
                required>
            </div>
          </div>
          <div class="text-center mt-6">
            <button
              class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit">
              Delete
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Table -->
    <div class="shadow-lg rounded-lg overflow-hidden mx-4 md:mx-10 mt-10">
      <table class="table-auto w-full">
        <thead class="bg-gray-300">
          <tr class="text-center w-full table-fixed">
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase id">
              ID
            </th>
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase id">
              Name
            </th>
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase id">
              Type
            </th>
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase id">
              Semester
            </th>
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase id">
              Department
            </th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach(item=> { %>
            <tr class="border-b border-opacity-20 dark:border-gray-300 dark:bg-gray-50">
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.id %>
              </td>
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.name %>
              </td>
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.course_type %>
              </td>
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.semester %>
              </td>
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.department %>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>
