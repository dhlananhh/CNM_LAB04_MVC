<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NODE.JS PRACTICE</title>
  <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>

<body>
  <div class="container p-2 mx-auto sm:p-4 dark:text-gray-800">
    <!-- Page Title -->
    <h2 class="mb-4 text-2xl font-bold leading-tight text-center uppercase">
      List of courses
    </h2>

    <!-- Form -->
    <div class="bg-white border border-4 rounded-lg shadow relative m-10">

      <div class="flex items-start justify-between p-5 border-b rounded-t">
        <h3 class="text-xl font-semibold">
          Course Registration Form
        </h3>
        <button type="button"
          class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center"
          data-modal-toggle="product-modal">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>

      <div class="p-6 space-y-4">
        <form action="/save" method="post">
          <div class="grid grid-cols-12 gap-6">
            <div class="col-span-12 sm:col-span-4">
              <label for="course-id" class="text-sm font-medium text-gray-900 block mb-2">
                Course ID
              </label>
              <input type="text" name="id" id="course-id"
                class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                required="">
            </div>
            <div class="col-span-12 sm:col-span-4">
              <label for="course-name" class="text-sm font-medium text-gray-900 block mb-2">
                Course Name
              </label>
              <input type="text" name="name" id="course-name"
                class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                required="">
            </div>
            <div class="col-span-12 sm:col-span-4">
              <label for="course-type" class="text-sm font-medium text-gray-900 block mb-2">
                Course Type
              </label>
              <select id="course-type" name="course_type"
                class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                required>
                <option selected>Choose a course type</option>
                <option value="Cơ sở">Cơ sở</option>
                <option value="Cơ sở ngành">Cơ sở ngành</option>
                <option value="Chuyên ngành">Chuyên ngành</option>
              </select>
            </div>
          </div>
          <div class="grid grid-cols-12 gap-6 mt-4">
            <div class="col-span-12 sm:col-span-6">
              <label for="semester" class="text-sm font-medium text-gray-900 block mb-2">
                Semester
              </label>
              <select id="semester" name="semester"
                class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                required>
                <option selected>Choose a semester</option>
                <option value="HK1/2023-2024">HK1/2023-2024</option>
                <option value="HK2/2023-2024">HK2/2023-2024</option>
                <option value="HK1/2024-2025">HK1/2024-2025</option>
                <option value="HK2/2024-2025">HK2/2024-2025</option>
              </select>
            </div>
            <div class="col-span-12 sm:col-span-6">
              <label for="department" class="text-sm font-medium text-gray-900 block mb-2">
                Department
              </label>
              <input type="text" name="department" id="department"
                class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                required="">
            </div>
          </div>
        </form>
      </div>

      <div class="p-6 border-t border-gray-200 rounded-b text-center">
        <button
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit">
          Save all changes
        </button>
      </div>

    </div>

    <!-- Table -->
    <div class="shadow-lg rounded-lg overflow-hidden mx-4 md:mx-10 mt-10">
      <table class="table-auto w-full table-bordered dark:border-gray-500">
        <thead class="dark:bg-gray-300">
          <tr class="text-center w-full table-fixed">
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase border border-gray-300">
              STT
            </th>
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase border border-gray-300">
              Tên môn học
            </th>
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase border border-gray-300">
              Loại môn học
            </th>
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase border border-gray-300">
              Học kỳ
            </th>
            <th class="py-4 px-6 text-left text-gray-600 font-bold uppercase border border-gray-300">
              Khoa
            </th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach(item=> { %>
            <tr class="border-b border-opacity-20 dark:border-gray-300 dark:bg-gray-50">
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.id %>
              </td>
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.name %>
              </td>
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.course_type %>
              </td>
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.semester %>
              </td>
              <td class="py-4 px-6 border-b border-gray-200">
                <%= item.department %>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>
